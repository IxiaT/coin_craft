<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddGoalDialogFragment">

    <!-- Close button -->
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:padding="4dp"
        android:src="@drawable/window_close" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/silkscreen_bold"
        android:gravity="center"
        android:text="NEW GOAL"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Name field -->
    <EditText
        android:id="@+id/goal_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFD700"
        android:fontFamily="@font/silkscreen_regular"
        android:hint="NAME"
        android:textColor="#000000" />

    <!-- Type dropdown -->
    <Spinner
        android:id="@+id/goal_type"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFD700" />

    <!-- Amount field -->
    <EditText
        android:id="@+id/goal_target_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFD700"
        android:fontFamily="@font/silkscreen_regular"
        android:hint="AMOUNT"
        android:inputType="numberDecimal"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/goal_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFD700"
        android:drawableEnd="@drawable/ic_calendar"
        android:fontFamily="@font/silkscreen_regular"
        android:hint="DATE"
        android:inputType="date"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/add_goal_button"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/addnewgoalbtn"
        android:text="ADD"
        android:textColor="#FFFFFF" />

</LinearLayout>