<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFF0C9"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:padding="25dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:id="@+id/loginText"
                android:layout_marginLeft="60dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/logo"
                android:textColor="@color/purple"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/silkscreen"
                android:text="Login User"
                android:layout_marginTop="20sp"
                android:id="@+id/loginUserText"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorText"/>


            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/silkscreen"
                android:hint="Email Address"
                android:padding="8dp"
                android:textSize="16sp"
                android:paddingStart="25dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/InputTextStyle"
                tools:hintTextAppearance="@style/HintTextStyle"
                />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/loginPassword"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/silkscreen"
                android:hint="Password"
                android:padding="8dp"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:paddingStart="25dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/InputTextStyle"
                tools:hintTextAppearance="@style/HintTextStyle"  />

            <ImageView

                android:id="@+id/loginButton"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="30dp"
                app:cornerRadius="20dp"
                android:background="@drawable/loginbtt"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:fontFamily="@font/nunito"
        android:onClick="openRegisterActivity"
        android:padding="8dp"
        android:text="Don't have an account"
        android:textAlignment="center"
        android:textColor="#2245C5"
        android:textSize="16sp" />

</LinearLayout>